{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "standard",
    "standard-react"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-useless-escape": "off",
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "spaced-comment": "off",
    "react/jsx-no-bind": "off",
    "react/sort-comp": [
      1,
      {
        "order": [
          "static-methods",
          "/^_.+$/",
          "constructor",
          "lifecycle",
          "everything-else",
          "/^render.+$/",
          "render"
        ]
      }
    ]
  }
}
